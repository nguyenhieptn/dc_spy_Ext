{
  "name": "Data Center Spy",
  "version": "2.0.4.6",
  "description": "A tool help users get item from some markets then push to Data Center",
  "permissions": [
    "activeTab","cookies","storage",
    "https://*/*",
    "http://*/*"
  ],
  "browser_action": {
    "default_title": "Data Center Spy",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "content_scripts":[
    {
      "matches":[
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_end",
      "js":[
        "js/helpers.js",
        "js/init.js",
        "sites/etsy.js",
        "sites/redbubble.js",
        "sites/amazon.js",
        "sites/ebay.js",
        "sites/shopify.js",
        "sites/woo.js",
        "sites/klaviyo.js",
        "sites/puzzlehd.js",
        "sites/displate.js",
        "sites/impawards.js",
        "sites/dzeetee.js",
        "sites/viralstyle.js",
        "sites/store_front.js",
        "sites/grand_matee.js",
        "js/content_scripts.js"
      ],
      "css" : ["css/content-scripts.css"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "manifest_version": 2
}
